<div class = "public_review_history px-4">

  <h5 class = "public_review_history_title">口コミ投稿履歴</h5>

  <div class = "public_review_history">
    <table class = "table table-borderless">
      <thead>
        <tr>
          <th class = "th1">No</th>
          <th class = "th2">投稿日時</th>
          <th class = "th3">投稿店舗</th>
          <th class = "th4">タイトル</th>
          <th class = "th5">点数</th>
          <th class = "th6">投稿詳細</th>
        </tr>
      </thead>

      <% @reviews.each_with_index do |review,i| %>
        <tbody>
          <tr>
            <td class = "td1"><%= i + 1 + @number %></td>
            <td class = "td2"><%= review.created_at.strftime("%Y/%-m/%-d %-H:%M:%S") %></td>
            <td class = "td3"><%= review.store.name %></td>
            <td class = "td4"><%= review.title %></td>
            <td class = "td5"><%= review.score %>点</td>
            <td class = "td6">
              <%= link_to store_review_path(review.store_id, review.id), class: "btn btn-primary public_review_history_review_show_button" do %>
                表示する
              <% end %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>

    <div>
      <%= paginate @reviews %>
    </div>

  </div>
</div>
