<div class = "admin_comment_index px-4">

  <div class = "admin_comment_index_1">
    <h5 class = "admin_comment_index_title">「<%= @review.title %>」に対するコメント一覧</h5>

    <div class = "admin_comment_index_store_name">店舗名：<%= @review.store.name %></div>
  </div>

  <div class = "admin_comment_index_2">
    <table class = "table table-borderless">
      <thead>
        <tr>
          <th class = "th1">No</th>
          <th class = "th2">コメント日時</th>
          <th class = "th3">投稿者</th>
          <th class = "th4">コメント内容</th>
          <th class = "th5"></th>
        </tr>
      </thead>

      <% @comments.each_with_index do |comment,i| %>
        <tbody>
          <tr>
            <td class = "td1"><%= i + 1 + @number %></td>
            <td class = "td2"><%= comment.created_at.strftime("%Y/%-m/%-d %H:%M:%S") %></td>
            <td class = "td3"><%= comment.poster %></td>
            <td class = "td4"><%= comment.content %></td>
            <td class = "td5">
              <%= link_to admin_comment_path(comment.id), method: :delete, class: "btn btn-danger admin_comment_destroy_button", data: { confirm: '本当に削除しますか？' } do %>
                削除する（不適切投稿）
              <% end %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>

    <div>
      <%= link_to '＜　口コミ詳細に戻る', admin_review_path(@review.id) %>
    </div>

    <div>
      <%= paginate @comments %>
    </div>

  </div>
</div>
